FROM node:23 as builder

WORKDIR /frontend

COPY package*.json ./

RUN npm install

COPY . .

RUN npm run build

# Step 2: Serve the build output using `serve`
FROM node:23

WORKDIR /frontend
RUN npm install -g serve

# Copy built assets from builder
COPY --from=builder /frontend/build ./build

EXPOSE 3000

CMD ["serve", "-s", "build", "-l", "3000"]
#CMD ["npm", "start"]
